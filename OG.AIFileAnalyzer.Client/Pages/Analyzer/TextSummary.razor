<RadzenDataList WrapItems="true" Data="@Summaries" TItem="KeyValuePair<string,string>">
    <Template Context="item">
        <RadzenCard Style="width: 250px;" Class="rz-border-radius-3">
            <RadzenRow Gap="0.5rem">
                <RadzenColumn Size="8" Class="rz-text-truncate">
                    <RadzenText TextStyle="TextStyle.Subtitle1" Class="rz-mb-0">
                        <strong>
                            @item.Key
                        </strong>
                    </RadzenText>
                </RadzenColumn>
            </RadzenRow>
            <hr style="border: none; background-color: rgba(0,0,0,.08); height: 1px; margin: 1rem 0;" />
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="1rem">
                <RadzenStack Gap="0">
                    <RadzenText TextStyle="TextStyle.Caption" Class="rz-mb-0">@item.Value</RadzenText>
                    </RadzenStack>
                </RadzenStack>
            </RadzenCard>
        </Template>
    </RadzenDataList>